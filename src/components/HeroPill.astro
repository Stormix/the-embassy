---
interface Props {
  variant: "blue" | "red"
}

const {variant} = Astro.props;
const image = variant === "blue" ? "bg-design": "bg-code";
const position = variant === "blue" ? "bg-[center_bottom_-9rem]": "bg-center";
---


<div class:list={["rounded-[100px] bg-no-repeat bg-cover pill", position, image]} />

<style lang="scss">
  .pill {
    height: 86px;
    width: 320px;
    
    @media (min-width: 1441px) {
      height: 96px;
      width: 400px;
    }
  }
</style>