---
export interface Member {
  name: string;
  image: string;
  role: string;
  socials: Array<{
    name: string;
    icon: string;
    url: string;
  }>;
}

interface Props {
  member: Member;
}

const { member } = Astro.props;
---

<div
  class="border border-accent p-8 rounded-lg justify-center flex flex-col hover:border-secondary ease-in-out duration-200 cursor-pointer"
>
  <img src={member.image} alt={member.name} class="w-full h-[300px] object-cover object-center rounded-lg" />
  <hr class="border-accent my-8" />

  <h3 class="text-2xl">{member.name}</h3>
  <p class="text-secondary">{member.role}</p>

  <div class="flex flex-row gap-4 mt-8 justify-center items-center">
    {
      member.socials.map((social) => (
        <div class="w-9 h-9 rounded-full border border-accent hover:border-secondary ease-in-out duration-200 cursor-pointer" />
      ))
    }
  </div>
</div>
