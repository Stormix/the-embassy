---
import About from '../components/About.astro';
import CTA from '../components/CTA.astro';
import ExploreMore from '../components/ExploreMore.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Members from '../components/Members.astro';
import Navbar from '../components/Navbar.astro';
import ProjectCard from '../components/ProjectCard.astro';
import FAQ from '../components/react/FAQ';
import { APP_NAME } from '../config/app';
import Layout from '../layouts/Layout.astro';

const title = `${APP_NAME} - Home`;
---

<Layout title={title}>
  <main class="overflow-x-hidden">
    <Hero>
      <Navbar class="absolute top-0 left-0 w-full" />
    </Hero>
    <div class="flex flex-col p-8 gap-y-8">
      <ProjectCard
        title="Venus Case Study"
        author="Jonathon Hamid"
        categories={['Case Study', 'UI/UX Design']}
        link="/case-study/venus"
        image="/images/project-1.png"
      />
      <ProjectCard
        title="Venus Case Study"
        author="Jonathon Hamid"
        categories={['Case Study', 'UI/UX Design']}
        link="/case-study/venus"
        image="/images/project-1.png"
      />
      <ProjectCard
        title="Venus Case Study"
        author="Jonathon Hamid"
        categories={['Case Study', 'UI/UX Design']}
        link="/case-study/venus"
        image="/images/project-1.png"
      />

      <ExploreMore />
      <Members />

      <CTA />
      <About />
      <FAQ client:only="react" />
      <Footer />
    </div>
  </main>
</Layout>
